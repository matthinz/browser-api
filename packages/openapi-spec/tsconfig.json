{
  "include": ["src/**/*.ts"],

  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "paths": {
      "server": ["../server/dist/index.d.ts"]
    }
  }
}
